<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.wemo.lightswitch" name="WeMo Light Switch" version="1.0.1" provider-name="Brooks Boyd">
    <requires>
      <import addon="xbmc.python" version="2.1.0" />
    </requires>
    <extension point="xbmc.service" library="default.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary>Let XBMC control your WeMo Switch.</summary>
        <description>Turn the light off when playback starts, and turn it back on when playback is paused or completed.</description>
        <platform>all</platform>
        <language>en</language>
        <license>BSD</license>
    </extension>
</addon>
